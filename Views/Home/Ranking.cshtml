@{
    ViewData["Title"] = "Ranking";
}

<div class="creditos">
    <div class="text-center">
        <h1 class="display-4">Ranking</h1>
        <p>A continuacion, las personas que mas rapido y con menos errores resolvieron la sala</p>

        <h2>Estadisticas</h2>
        <ul class="list-group">
            @{
                for (int i = 0; i < ViewBag.Jugadores.Count; i++){
                    if (i == 0){
                        <li id="@Html.Raw(i)" class="creditos__item list-group-item active">
                            <p>Nombre:</p>
                            <p>@ViewBag.Jugadores[i].Nombre</p>
                            <p>Tiempo:</p>
                            <p>@ViewBag.Jugadores[i].Tiempo</p>
                            <p>Errores:</p>
                            <p>@ViewBag.Jugadores[i].Errores</p>
                        </li>
                    }
                    else{
                        <li id="@Html.Raw(i)" class="creditos__item list-group-item">
                            <p>Nombre:</p>
                            <p>@ViewBag.Jugadores[i].Nombre</p>
                            <p>Tiempo:</p>
                            <p>@ViewBag.Jugadores[i].Tiempo</p>
                            <p>Errores:</p>
                            <p>@ViewBag.Jugadores[i].Errores</p>
                        </li>
                    }
                }
            }
        </ul>
    </div>
</div>