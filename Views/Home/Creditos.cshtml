@{
    ViewData["Title"] = "Creditos";
    TimeSpan tiempoTranscurrido = ViewBag.tiempoTranscurrido;
    int minutos = (int)tiempoTranscurrido.TotalMinutes;
    int segundos = (int)tiempoTranscurrido.TotalSeconds % 60;
}

<div class="creditos">
    <div class="text-center">
        <h1 class="display-4">Lo lograste!</h1>
        <p>Pudiste responder a todas la preguntas sin morir en el intento, estamos muy orgullosos!</p>

        <h2>Estadisticas</h2>
        <ul class="list-group">
            <li id="1" class="creditos__item list-group-item active"><p>Tiempo:</p> <p>@minutos:@segundos</p></li>
            <li id="2" class="creditos__item list-group-item"><p>Errores:</p><p>@ViewBag.errores</p></li>
            <li id="3" class="creditos__item list-group-item"><p>Back:</p><p>Lautaro Yukelson</p></li>
            <li id="4" class="creditos__item list-group-item"><p>Front:</p><p> Iair Steimberg</p></li>
        </ul>
    </div>

    <div type="button" class="boton" data-bs-toggle="modal" data-bs-target="#modal-guardar" id="pista"><a><span>Guarda tu resultado</span></a></div>   

    <div class="modal fade" id="modal-guardar" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Guardar Resultado...</h5>
                </div>
                <div class="modal-body">
                    <form action="GuardarResultado" method="post">
                         <input class="form-control input inputForm no-margin" type="text" name="clave" placeholder="Ingresa tu nombre..." autocomplete="off">
                        <input type="text" name="tiempo" value="@Html.Raw(@ViewBag.tiempoTranscurrido)" hidden>
                        <input type="number" name="errores" value="@Html.Raw(@ViewBag.errores)" hidden>
                        <button class="btn btn-secondary" type="submit">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
